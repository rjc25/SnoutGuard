{
  "name": "@archguard/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@archguard/core": "workspace:*",
    "@archguard/analyzer": "workspace:*",
    "@archguard/reviewer": "workspace:*",
    "@archguard/velocity": "workspace:*",
    "@archguard/work-summary": "workspace:*",
    "@archguard/integrations": "workspace:*",
    "@archguard/context-sync": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.4.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0"
  }
}
