{
  "name": "@snoutguard/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "CLI entry point for SnoutGuard - architectural guardrails & engineering intelligence",
  "bin": {
    "snoutguard": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@snoutguard/core": "workspace:*",
    "@snoutguard/analyzer": "workspace:*",
    "@snoutguard/context-sync": "workspace:*",
    "@snoutguard/mcp-server": "workspace:*",
    "@snoutguard/server": "workspace:*",
    "@snoutguard/reviewer": "workspace:*",
    "@snoutguard/velocity": "workspace:*",
    "@snoutguard/work-summary": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "drizzle-orm": "^0.38.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
