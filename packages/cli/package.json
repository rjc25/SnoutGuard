{
  "name": "@archguard/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "CLI entry point for ArchGuard - architectural guardrails & engineering intelligence",
  "bin": {
    "archguard": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@archguard/core": "workspace:*",
    "@archguard/analyzer": "workspace:*",
    "@archguard/context-sync": "workspace:*",
    "@archguard/mcp-server": "workspace:*",
    "@archguard/reviewer": "workspace:*",
    "@archguard/velocity": "workspace:*",
    "@archguard/work-summary": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "drizzle-orm": "^0.38.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
